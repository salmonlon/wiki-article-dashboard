<div class="chart">
    <h2>Overall Charts</h2>
    <div>
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-primary active" id="option1" >
                <input type="radio" name="options" autocomplete="off"  checked> Bar Chart
            </label>
            <label class="btn btn-primary" id="option2" >
                <input type="radio" name="options" autocomplete="off" > Pie Chart
            </label>

        </div>
        
    </div>

    <div class="chart-group">
        <div id="bar-chart-container">
            <h3>Revision number by year</h2>
            <div id="bar-chart"></div>
        </div>   
        <div id="pie-chart-container" style="display: none;">
            <h3>Revision number distribution by user type</h2>
            <div id="pie-chart"></div>
        </div>
    </div>

</div>






