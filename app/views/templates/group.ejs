
<div id="Revision">  
    <h2>Number of revisions</h2>
        <label for="numRevision">Show </label>
        <input id="numRevision" type="number" name="numArticle" min="1" max="100" value="3">
        <b>results</b>
        <button id="okay1">OK</button>

        <div id="numRevisionResult" class="row">
            <div class="col-md-6">
                <h4>Articles with highest number of revisions</h4>
                <% for (let i = 0, size = top_revisions.length; i < size; i++) {%>
                    <p>
                        <%= top_revisions[i]._id%> : <%= top_revisions[i].numOfEdits%>
                    </p>
                <% } %>
                <div id="content"></div>
            </div>
            <div class="col-md-6">
                <h4>Articles with lowest number of revisions</h4>
                <% for (let i = 0, size = bottom_revisions.length; i < size; i++) {%>
                    <p>
                        <%= bottom_revisions[i]._id%> : <%= bottom_revisions[i].numOfEdits%>
                    </p>
                <% } %>
            </div>
        </div>
</div>
