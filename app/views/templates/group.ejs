
<div id="Revision row">  
    <h2>Number of revisions</h2>

        <label for="numRevision">Show </label>
        <input id="numRevision" type="number" name="numArticle" min="1" max="<%= numLimit %>" value="3">
        <b>results</b>
        <button id="okay1">OK</button>

        <div id="numRevisionResult" class="row">

            <div class="col-md-6">
                <h4>Articles with highest number of revisions</h4>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Article Name</th>
                            <th>Number of Revisions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0, size = top_revisions.length; i < size; i++) {%>
                            <tr>
                                <td><%= top_revisions[i]._id%></td>
                                <td><%= top_revisions[i].numOfEdits%></td>
                            </tr>
                        <% } %>                        
                    </tbody>
                    
                </table>               
            </div>

            <div class="col-md-6">
                <h4>Articles with lowest number of revisions</h4>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Article Name</th>
                            <th>Number of Revisions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0, size = top_revisions.length; i < size; i++) {%>
                            <tr>
                                <td><%= bottom_revisions[i]._id%></td>
                                <td><%= bottom_revisions[i].numOfEdits%></td>
                            </tr>
                        <% } %>                        
                    </tbody>
                    
                </table>               
            </div>

        </div>
    </div>
