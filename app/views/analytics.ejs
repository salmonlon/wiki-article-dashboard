<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<meta name="description" content="">
	<meta name="author" content="">

	<title>Wiki Analytics</title>

	<!-- Bootstrap core CSS -->
	<link href="dist/css/bootstrap.min.css" rel="stylesheet">

	<!-- Custom styles for this template -->
	<link href="css/analytics.css" rel="stylesheet">

	<!-- jQuery -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
	<script>
		window.jQuery || document.write('<script src="assets/js/vendor/jquery.min.js"><\/script>')
	</script>
	<!-- <script src="js/ejs.js"></script> -->

</head>

<body>

	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">Wiki Analytics</a>
			</div>
			<div id="navbar" class="navbar-collapse collapse">

			</div>
			<!--/.navbar-collapse -->
		</div>
	</nav>

	<!-- Main jumbotron for a primary marketing message or call to action -->
	<div class="jumbotron">
		<div class="container">

			<!--      place google chart here      -->
			<h1>Overview</h1>
			<div class="row">
				<div class="col-md-6">
					<div id="pie-chart"></div>
				</div>
				<div class="col-md-6">
					<div id="bar-chart"></div>
				</div>
			</div>
			<div class="row">
				<div>
					<a id="group_button" class="btn btn-primary btn-lg" role="button">Group Analysis&raquo;</a> 
					<a id="individual_button" class="btn btn-primary btn-lg" role="button">Individual Analysis&raquo;</a>
					<a id="author_button" class="btn btn-primary btn-lg" role="button">Author Analysis &raquo;</a>
				</div>
			</div>
		</div>
	</div>



	<div id="analysis" class="container">
		<%- include('templates/group.ejs'); %>
	</div>  

	<!-- /container -->
	<% var group_html = include('templates/group.ejs'); %>
	<% var indiv_html = include('templates/individual.ejs'); %>
	<% var author_html = include('templates/author.ejs'); %>

	<script>
		$(document).ready(function(){
			$("#group_button").click(function(){
				$("#analysis").html(`<%- group_html %>`);

			});
			$("#individual_button").click(function(){
				$("#analysis").html(`<%- indiv_html %>`);     
			});
			$("#author_button").click(function(){
				$("#analysis").html(`<%- author_html %>`);     
			});    
            $("#okay1").click(function(){
                var parameter = {number: $("#numRevision").val()};
                console.log(parameter);
                var jqxhr = $.get( '/numrevision',parameter);
                jqxhr.done(function(result) {
                    $('#numRevisionResult').html(result);
                });
                jqxhr.fail(function(jqXHR){
                    $('#numRevisionResult').html("Response status:" + jqXHR.status)
                    //console.log("Response status:" + jqXHR.status)
                });
            }); 
            $("#okay3").click(function(){
                var parameter = {number: $("#numHistory").val()};
                console.log(parameter);
                var jqxhr = $.get( '/age',parameter);
                jqxhr.done(function(result) {
                    $('#numHistoryResult').html(result);
                });
                jqxhr.fail(function(jqXHR){
                    $('#numHistoryResult').html("Response status:" + jqXHR.status)
                    //console.log("Response status:" + jqXHR.status)
                });
            }); 

		});

	</script> 

